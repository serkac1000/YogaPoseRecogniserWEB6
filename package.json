
{
  "name": "yoga-pose-recognizer",
  "version": "1.0.0",
  "description": "Yoga Pose Recognition Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-packager . yoga-pose-app --platform=win32 --arch=x64 --out=dist/ --overwrite",
    "build-exe": "electron-builder --win"
  },
  "build": {
    "appId": "com.yogapose.app",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    }
  },
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^24.0.0",
    "electron-packager": "^17.1.1"
  }
}
